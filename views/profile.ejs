<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

  <!-- Navbar with Logout Button -->
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand">Welcome <%= user.username %></a>
      <form class="d-flex">
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      </form>
    </div>
  </nav>

  <div class="containerprofile">
    <div class="cardprofile">
      <div class="profile-picture">
        <img src="https://img.freepik.com/premium-vector/man-profile-cartoon_18591-58482.jpg?w=740"
          alt="Profile Picture">
      </div>
      <h2 class="name">
        <%= user.fullname %>
      </h2>
      <h3 class="username">@<%= user.username %>
      </h3>
      <p class="tagline">some taglines</p>
      <p class="description">some description</p>
      <a href="#" class="button">Account Settings</a>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="imageText" placeholder="description" required>
        <input type="file" name="file" required/>
        <input type="submit">
      </form>
    </div>
  </div>

  <div class="container ">
    <div class="cards d-flex">
      <% user.post_id.forEach(function(post_id){ %>
        <div class="card " style="width: 18rem;">
          <img src="/images/upload/<%= post_id.image %>">
          <div class="class-body">
            <h5 class="card-title">
              <%= post_id.imageText %>
            </h5>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>